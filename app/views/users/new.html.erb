<div class="main users-new">
  <div class="container">
    <h2 class="form-heading">新規ユーザー登録</h2>
      <%= form_with model: @user, class: 'registration-main', local: true do |f| %>
        <div class='form-wrap'>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">メールアドレス</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">パスワード</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.password_field :password, class:"input-default", id:"email", placeholder:"6文字以上入力" %>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">パスワード(確認用)</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.password_field :password_confirmation, class:"input-default", id:"email", placeholder:"6文字以上入力"%>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">ユーザー名</label>
              <span class="indispensable">必須</span>
            </div>
            <%= f.text_field :name, class:"input-default", id:"nickname", placeholder:"例) 山田太郎", maxlength:"40" %>
          </div>
          <div class='login-btn'><br>
            <%= f.submit "新規登録" ,class:"login-red-btn" %>
          </div>
        </div>
      <% end %>
      <p class="devise-link">アカウントをお持ちですか？
        <%= link_to "サインインする", login_path %>
      </p>
    </div>
  </div>
</div>

