<div class="main users-new">
  <div class="container">
    <h2 class="form-heading">ログイン</h2>
    <div class="form users-form">
      <div class="form-body">

        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>
        <%= form_with model: @user, url: login_path, local: true do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br>
            <%= f.email_field :email, autofocus: true %>
          </div>
          <div class="field">
            <%= f.label :password, "パスワード   (6文字以上)" %><br>
            <%= f.password_field :password, autocomplete: "off" %>
          </div>
          <div class="actions"><br>
            <%= f.submit "ログイン", class: :form__btn  %>
          </div>
        <% end %>
        <p class="devise-link">アカウントをお持ちでないですか？
          <%= link_to "登録する", new_user_path %>
        </p>
      </div>
    </div>
  </div>
</div>
