<div class="container">
  <div class="container-header">
    <h1>ユーザー一覧</h1>
    <%= link_to "+ 新規登録", signup_path, class:"new-button"%>
  </div>
  <div class="index-table-wrapper">
    <div class="table-head">
      <span class="id-column">ユーザid</span>
      <span>ユーザーname</span>
    </div>
    <% @users.each do |user| %>
      <div class="table-body">
        <div class="item-data">
          <span class="id-column"><%= user.id %></span>
          <span class="name-column"><%= link_to user.name, user_path(user.id) %></span>
          <% unless user.image.attached? %>
            <%= image_tag "/images/profile_default_img_128.png", class: "profile-img"%>
          <% else %>
            <%= image_tag user.image, class: "profile-img" %>
          <% end %>
        </div>
        <div class="item-menu">
          <%= link_to "削除", "#", id:"delete-event" %>
          <%= link_to "編集", "#" %>
        </div>
      </div>
    <% end %>
  </div>
</div>